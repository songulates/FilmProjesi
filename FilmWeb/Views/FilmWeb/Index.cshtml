@using FilmWeb.Controllers
@model List<Class1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/FilmLayout.cshtml";
}
<html>
<body>
    <div class="container">
        
        <table class="table-bordered" style="padding-left: 50px;">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Genre</th>
                <th>Director</th>
                <th>Year</th>
                <th>Sil</th>
                <th>Düzenle</th>


            </tr>
            @foreach (var item in Model)
            {
                <tr>

                    <td style="width:10%">@item.ID</td>
                    <td style="width:20%">@item.Name</td>
                    <td style="width:20%">@item.Genre</td>
                    <td style="width:20%">@item.Director</td>
                    <td style="width:20%">@item.Year</td>
                    <td style="width:50%"><a href="/FilmWeb/DeleteFilm/@item.ID" class="btn btn-danger">Film Sil</a> </td>

                    <td style="width:50%"><a href="/FilmWeb/EditFilm/@item.ID" class="btn btn-warning">Film Düzenle</a> </td>
                </tr>

            }
        </table>

        </br>
        <a href="/FilmWeb/CreateFilm/" class="btn btn-primary">Film Ekle</a>

        </br>
    </div>


</body>
</html>
